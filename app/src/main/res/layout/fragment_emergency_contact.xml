<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff050505"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.sunnygurnani.multimenu.EmergencyContactActivity$PlaceholderFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:columnCount="2">

        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:text="Name"
            android:textColor="#fff8fffb" />

        <EditText
            android:id="@+id/name_user"
            android:layout_width="fill_parent"
            android:layout_column="1"
            android:layout_row="0"
            android:inputType="text"
            android:textColor="#fff8fffb" />


        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:text="Phone Number"
            android:textColor="#fff8fffb" />

        <EditText
            android:id="@+id/phone_user"
            android:layout_width="fill_parent"
            android:layout_column="1"
            android:layout_row="1"
            android:inputType="number"
            android:textColor="#fff8fffb" />

        <Button
            android:id="@+id/save_user"
            android:layout_column="0"
            android:layout_row="2"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="Save"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/cancel_user"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="15dp"
            android:layout_row="2"
            android:text="Cancel"
            android:textColor="#ffffff" />

    </GridLayout>
</RelativeLayout>
